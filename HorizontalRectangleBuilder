local length = tonumber( tArgs[1] )
local width = tonumber( tArgs[2] )
local slot = 1
local turnCondition = 0
turtle.select(1)

for i = 1, width do
    for j = 1, length do
        while turtle.getItemCount() == 0 do
            slot = ( slot % 16 ) + 1
            turtle.select( slot )
        end
        
        while turtle.getFuelLevel() == 0 do
          for k = 1, 16 do
            turtle.select( k )
            turtle.refuel( 1 )
          end
          if turtle.getFuelLevel() then
            print("Refuel!")
            local event, p1 = os.pullEvent("turtle_inventory")
          end
          
        end
        
        turtle.placeDown()
        turtle.forward()
    end
    if turnCondition == 0 then
        turtle.turnRight()
        turtle.forward()
        turtle.turnRight()
        turtle.forward()
        turnCondition = 1
    else
        turtle.turnLeft()
        turtle.forward()
        turtle.turnLeft()
        turtle.forward()
        turnCondition = 0
    end
end
