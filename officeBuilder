local function placer(numBlocks)
  for i = 1, numBlocks do
    turtle.forward()
    turtle.placeDown()
  end
end

local function adjustLeft()
  turtle.turnLeft()
  turtle.forward()
  turtle.turnRight()
end

local function adjustFrontL()
  turtle.forward()
  turtle.turnLeft()
end

local function adjustRight()
  turtle.turnRight()
  turtle.forward()
  turtle.turnLeft()
end

local function adjustFrontR()
  turtle.forward()
  turtle.turnRight()
end

local function main()
  placer(3)
  adjustLeft()
  placer(2)
  adjustLeft()
  placer(2)
  adjustLeft()
  placer(1)
  adjustLeft()
  placer(1)
  adjustLeft()
  placer(1)
  adjustLeft()
  placer(1)
  adjustLeft()
  placer(1)
  adjustFrontL()
  placer(2)
  adjustRight()
  placer(2)
  adjustRight()
  placer(3)
  adjustFrontR()
  
  placer(10)
  adjustRight()
  placer(3)
  adjustRight()
  placer(2)
  adjustRight()
  placer(2)
  adjustRight()
  placer(1)
  adjustRight()
  placer(1)
  adjustRight()
  placer(1)
  adjustRight()
  placer(1)
  adjustRight()
  placer(1)
  adjustFrontR()
  
  placer(10)
  adjustRight()
  placer(3)
  adjustRight()
  placer(2)
  adjustRight()
  placer(2)
  adjustRight()
  placer(1)
  adjustRight()
  placer(1)
  adjustRight()
  placer(1)
  adjustRight()
  placer(1)
  adjustRight()
  placer(1)
  adjustFrontR()
  
  placer(3)
  adjustLeft()
  placer(2)
  adjustLeft()
  placer(2)
  adjustLeft()
  placer(1)
  adjustLeft()
  placer(1)
  adjustLeft()
  placer(1)
  adjustLeft()
  placer(1)
  adjustLeft()
  placer(1)
  adjustFrontL()
  placer(2)
  adjustRight()
  placer(2)
  adjustRight()
  placer(3)
  adjustFrontR()
end

main()
